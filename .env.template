# ============================================
# SASHKO MUSIC - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Command: cp .env.template .env


# ============================================
# PATHS CONFIGURATION
# ============================================
# Main library path (where your music collection is stored)
LIBRARY_ROOT_PATH=/mnt/media_hdd/lib

# Downloads base path (where all downloads go)
DOWNLOADS_BASE_PATH=/opt/sashko-music/downloads


# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_USERNAME=postgres
DB_PASSWORD=postgres


# ============================================
# TELEGRAM BOT (sm-main-agent)
# ============================================
# Get bot token from @BotFather on Telegram
TGBOT_NAME=your_bot_username
TGBOT_TOKEN=your_telegram_bot_token_here

# Optional: Your Telegram chat ID (get from @userinfobot)
TGBOT_DEFAULT_CHAT_ID=0


# ============================================
# DISCOGS API (sm-main-agent)
# ============================================
# Get token from https://www.discogs.com/settings/developers
DISCOGS_API_TOKEN=your_discogs_token_here


# ============================================
# ANTHROPIC CLAUDE API (sm-main-agent, sm-library-agent)
# ============================================
# Get API key from https://console.anthropic.com/
AI_ANTHROPIC_API_KEY=your_anthropic_api_key_here


# ============================================
# SLSKD (Soulseek P2P) (sm-download-agent)
# ============================================
# API key for sm-download-agent to authenticate with Slskd
# Generate a secure random string (e.g., openssl rand -hex 32)
SLSKD_API_KEY=your_slskd_api_key_here

# Your Soulseek account credentials (for P2P network)
# Register at https://www.slsknet.org/news/
SLSKD_SOULSEEK_USERNAME=your_soulseek_username
SLSKD_SOULSEEK_PASSWORD=your_soulseek_password

# Slskd Web UI credentials (for accessing http://your-server:5030)
SLSKD_WEB_USERNAME=slskd
SLSKD_WEB_PASSWORD=slskd


# ============================================
# QOBUZ DOWNLOAD (sm-download-agent)
# ============================================
# Your Qobuz account credentials
QOBUZ_EMAIL=your_qobuz_email@example.com
QOBUZ_PASSWORD=your_qobuz_password_here

# Path to qobuz-dl CLI tool (after setup-python-tools.sh)
QOBUZ_CLI_PATH=/usr/local/bin/qobuz-dl

# Where Qobuz downloads will be saved
QOBUZ_DOWNLOAD_PATH=/opt/sashko-music/downloads/qobuz


# ============================================
# BANDCAMP DOWNLOAD (sm-download-agent)
# ============================================
# Path to bandcamp-dl CLI tool (after setup-python-tools.sh)
BANDCAMP_CLI_PATH=/usr/local/bin/bandcamp-dl

# Where Bandcamp downloads will be saved
BANDCAMP_DOWNLOAD_PATH=/opt/sashko-music/downloads/bandcamp


# ============================================
# APPLE MUSIC DOWNLOAD (sm-download-agent)
# ============================================
# Path to gamdl CLI tool (after setup-python-tools.sh)
APPLE_MUSIC_CLI_PATH=/usr/local/bin/gamdl

# Path to Apple Music cookies file (extract from browser)
APPLE_MUSIC_COOKIES_PATH=/opt/sashko-music/cookies.txt

# Where Apple Music downloads will be saved
APPLE_MUSIC_DOWNLOAD_PATH=/opt/sashko-music/downloads/apple-music


# ============================================
# NAVIDROME (Music Streaming Server)
# ============================================
# User ID and Group ID to run Navidrome
# Get with: id -u (for user ID) and id -g (for group ID)
NAVIDROME_USER_ID=1000
NAVIDROME_GROUP_ID=1000